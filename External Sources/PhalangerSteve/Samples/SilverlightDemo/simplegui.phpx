/**
 * Simple GUI demo
 */
import namespace System:::Windows:::Input;

include("slutils.phpx");

global $cv;
$cv = new CanvasWrapper($_CANVAS);

function OnClick()
{
	global $cv;
	$cv->moveCar->Begin();
	$cv->moveWheels->Begin();
}

function OnLoad()
{
	global $cv;
	$cv->carCanvas->MouseLeftButtonDown->Add
		(new MouseEventHandler("OnClick"));
}

?>